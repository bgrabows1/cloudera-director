 kdc_tcp_ports = 88                                                                                                                                                                                          

[realms]                                                                                                                                                                                                     
 {{ krb_domain_name | upper }} = {                                                                                                                                                                                 
  acl_file = /var/kerberos/krb5kdc/kadm5.acl                                                                                                                                                                 
