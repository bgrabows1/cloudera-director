 admin_server = FILE:/var/log/kadmind.log                                                                                                                                                                    

[libdefaults]                                                                                                                                                                                                
 dns_lookup_realm = false                                                                                                                                                                                    
 dns_lookup_kdc = false                                                                                                                                                                                      
 ticket_lifetime = 24h                                                                                                                                                                                       
 renew_lifetime = 7d                                                                                                                                                                                         
 forwardable = true                                                                                                                                                                                          
 pkinit_anchors = /etc/pki/tls/certs/ca-bundle.crt                                                                                                                                                           
 default_realm = {{ krb_domain_name | upper }} 
 default_ccache_name = KEYRING:persistent:%{uid}

[realms]                                                                                                                                                                                                     
  {{ krb_domain_name | upper }} = {                                                                                                                                                                                
  kdc = {{ krb_domain_name }}                                                                                                                                                                             
  admin_server = {{ krb_domain_name }}                                                                                                                                                                     
 }                                                                                                                                                                                                           

[domain_realm]                                                                                                                                                                                               
 .example.com = {{ krb_domain_name | upper }}                                                                                                                                                                      
 example.com = {{ krb_domain_name | upper }} 